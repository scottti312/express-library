extends layout 

block content
  
  h1 Author: #{author.name}
  p #{author.birth_formatted} - #{author.death_formatted}

  div(style='margin-left:20px;margin_top: 20px')

    h4 Books 

    dl
      each book in author_books
        dt
          a(href=book.url) #{book.title}
        dd #{book_summary}

      else 
        p This author has no books.